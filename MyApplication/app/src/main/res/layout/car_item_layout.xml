<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="3dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardMaxElevation="0dp">

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_client_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:background="@drawable/corner"
            android:src="@mipmap/baseline_add_white_24dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_client_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


        >
        <TextView
                android:id="@+id/product_client_brand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Brand"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                />


            <TextView
                android:id="@+id/product_client_model"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Model"
                android:layout_toRightOf ="@id/product_client_brand"
                android:layout_marginLeft="80dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/product_client_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/product_client_brand"
                android:text="1200 $"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/product_client_year"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/product_client_price"
                android:text=" 2017"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:id="@+id/product_client_wish"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:src="@drawable/wish"
                android:layout_weight="0.1"
                />



        </RelativeLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>